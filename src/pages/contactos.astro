---
import Layout from '../layouts/Layout.astro';
import { asset } from '../utils/paths.js';
---

<Layout title="Contactos - ProcerbolSai">
    <main>
        <div class="flex relative w-full h-[90vh] justify-center items-center">
            <img src={asset("img/contactos/fondo_contactos.webp")} alt="Ubicacion" class="w-full h-[90vh]" loading="lazy"/>
            <div class="grid grid-cols-2 grid-rows-1 gap-8 absolute left-1/2 -translate-x-1/2 w-[80%] max-w-6xl">
                <div class="w-full">
                    <input 
                        type="text" 
                        placeholder="Nombre:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="mb-5 w-full px-8 py-5 text-lg text-gray-700 bg-white rounded-full focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0"
                    />
                    <input 
                        type="email" 
                        placeholder="Email:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="mb-5 w-full px-8 py-5 text-lg text-gray-700 bg-white rounded-full focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0"
                    />
                    <textarea
                        rows="4" 
                        placeholder="Mensaje:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="mb-5 w-full px-8 py-5 text-lg text-gray-700 bg-white rounded-4xl focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0"
                    />
                    <img src={asset("img/contactos/btn_enviar.webp")} alt="Ubicacion" class="w-full" loading="lazy"/>
                </div>
                <div class="w-full h-full rounded-2xl overflow-hidden" style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d803.8757849458492!2d-68.19344167143525!3d-16.581580147098148!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x915ed9812a98db81%3A0x348586bb2150a724!2sPROCERBOL%20SAI%20SRL.!5e0!3m2!1ses-419!2sbo!4v1765501987371!5m2!1ses-419!2sbo"
                        width="100%" 
                        height="100%" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        title="UbicaciÃ³n de PROCERBOL SAI SRL">
                    </iframe>
                </div>
            </div>
        </div>
        <img src={asset("img/contactos/ubicacion.webp")} alt="Ubicacion" class="w-full" loading="lazy"/>
    </main>
</Layout>