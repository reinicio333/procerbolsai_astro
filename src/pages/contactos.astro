---
import Layout from '../layouts/Layout.astro';
import { asset } from '../utils/paths.js';
---

<Layout title="Contactos - ProcerbolSai">
    <main>
        <!-- Sección del formulario con fondo -->
        <div class="relative w-full min-h-screen lg:h-[80vh] flex justify-center items-center py-8 lg:py-0">
            <img 
                src={asset("img/contactos/fondo_contactos.webp")} 
                alt="Fondo contactos" 
                class="absolute inset-0 w-full h-full object-cover" 
                loading="lazy"
            />
            
            <!-- Contenedor del formulario y mapa -->
            <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 w-[90%] lg:w-[80%] max-w-6xl">
                <!-- Formulario -->
                <div class="w-full space-y-4 lg:space-y-5">
                    <input 
                        type="text" 
                        placeholder="Nombre:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="w-full px-5 lg:px-8 py-4 lg:py-5 text-base lg:text-lg text-gray-700 bg-white rounded-full focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0"
                    />
                    <input 
                        type="email" 
                        placeholder="Email:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="w-full px-5 lg:px-8 py-4 lg:py-5 text-base lg:text-lg text-gray-700 bg-white rounded-full focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0"
                    />
                    <textarea
                        rows="4"
                        placeholder="Mensaje:" 
                        style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);"
                        class="w-full px-5 lg:px-8 py-4 lg:py-5 text-base lg:text-lg text-gray-700 bg-white rounded-3xl lg:rounded-4xl focus:outline-none transition-shadow placeholder:text-gray-500 border-0 focus:ring-0 resize-none"
                    />
                    <button class="w-full">
                        <img 
                            src={asset("img/contactos/btn_enviar.webp")} 
                            alt="Enviar mensaje" 
                            class="w-full hover:opacity-90 transition-opacity" 
                            loading="lazy"
                        />
                    </button>
                </div>
                
                <!-- Mapa -->
                <div class="w-full h-[300px] lg:h-full rounded-2xl overflow-hidden" style="box-shadow: 0 8px 16px rgba(0,0,0,0.15);">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d803.8757849458492!2d-68.19344167143525!3d-16.581580147098148!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x915ed9812a98db81%3A0x348586bb2150a724!2sPROCERBOL%20SAI%20SRL.!5e0!3m2!1ses-419!2sbo!4v1765501987371!5m2!1ses-419!2sbo"
                        width="100%" 
                        height="100%" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"
                        title="Ubicación de PROCERBOL SAI SRL">
                    </iframe>
                </div>
            </div>
        </div>
        
        <!-- Imagen de ubicación inferior -->
        <img 
            src={asset("img/contactos/ubicacion.webp")} 
            alt="Información de ubicación" 
            class="w-full" 
            loading="lazy"
        />
    </main>
</Layout>